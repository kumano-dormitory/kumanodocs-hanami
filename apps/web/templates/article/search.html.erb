<h1>検索結果― 『<%= keywords %>』</h1>

<%= form_search(keywords) %>

<% articles.each do |article| %>
  <div class="article">
    <h2>
      <a href="<%= routes.article_path(id: article.id) %>">
        <%= article_numbered_title(article) %>
      </a>
    </h2>
    <p><%= article.body %></p>
  </div>
<% end %>
